{
    "name": "network-state-assistant",
    "version": "1.0.0",
    "description": "Network State LLM Assistant with context awareness",
    "main": "index.js",
    "scripts": {
        "start": "node backend/server.js",
        "backend": "cd backend && npm run dev",
        "frontend": "cd frontend && npm run dev",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
        "test": "cd backend && npm run test:api"
    },
    "keywords": [
        "network-state",
        "llm",
        "assistant",
        "claude",
        "replicate"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}